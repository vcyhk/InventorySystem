<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="setScene" prefHeight="385.0" prefWidth="600.0" stylesheets="@/css/changePwCSS.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="setting.settingChangePw.ChangePwController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="59.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/resources/btn_password.png" />
               </image>
            </ImageView>
            <Label text="Change Password">
               <font>
                  <Font name="Segoe UI Bold" size="23.0" />
               </font>
               <HBox.margin>
                  <Insets left="15.0" />
               </HBox.margin>
            </Label>
         </children>
         <padding>
            <Insets left="25.0" />
         </padding>
      </HBox>
      <Separator opacity="0.3" prefWidth="200.0" />
      <VBox prefHeight="262.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="19.0" prefWidth="126.0" text="Current Password">
                     <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                     </font>
                  </Label>
                  <PasswordField fx:id="currentPass" prefHeight="28.0" prefWidth="159.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="600.0">
               <children>
                  <Label text="New Password">
                     <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                     </font></Label>
                  <PasswordField fx:id="newPass" prefHeight="28.0" prefWidth="159.0">
                     <HBox.margin>
                        <Insets left="50.0" />
                     </HBox.margin>
                     <VBox.margin>
                        <Insets left="28.0" />
                     </VBox.margin>
                  </PasswordField>
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="18.0" prefWidth="127.0" text="Confirm Password">
                     <font>
                        <Font name="Segoe UI Bold" size="14.0" />
                     </font></Label>
                  <PasswordField fx:id="confirmPass" prefHeight="28.0" prefWidth="159.0">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="29.0" prefWidth="600.0">
               <children>
                  <Label fx:id="informationBox" textFill="RED">
                     <font>
                        <Font name="Segoe UI Bold" size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="20.0" prefWidth="600.0">
               <children>
                  <Label text="Forgot your password ?" textFill="#4361da" underline="true">
                     <font>
                        <Font name="Segoe UI Bold" size="12.0" />
                     </font>
                     <tooltip>
                        <Tooltip text="Please contact your administrator if you have forgotten your password." />
                     </tooltip>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Label>
               </children>
               <padding>
                  <Insets left="40.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets top="15.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="600.0">
         <children>
            <Button fx:id="changePwButton" mnemonicParsing="false" onAction="#confirmChange" prefHeight="33.0" prefWidth="174.0" text="Change Password" textFill="WHITE">
               <font>
                  <Font name="Calibri Bold" size="17.0" />
               </font></Button>
         </children>
         <padding>
            <Insets bottom="20.0" right="25.0" />
         </padding></HBox>
   </children>
</VBox>
